<Application x:Class="Presupuestos.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Presupuestos.WPF.Views"
             xmlns:vm="clr-namespace:Presupuestos.WPF.ViewModels">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:BudgetWizardViewModel}">
            <views:BudgetWizardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MaterialViewModel}">
            <views:MaterialView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:LaborViewModel}">
            <views:LaborView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SubgroupViewModel}">
            <views:SubgroupView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SettingsViewModel}">
            <views:SettingsView/>
        </DataTemplate>
    </Application.Resources>
</Application>
