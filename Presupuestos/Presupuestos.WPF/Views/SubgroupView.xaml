<UserControl x:Class="Presupuestos.WPF.Views.SubgroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel Margin="12">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Spacing="8">
            <TextBox Width="280" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Buscar" Command="{Binding SearchCommand}"/>
            <Button Content="Nuevo subgrupo" Command="{Binding NewCommand}"/>
            <Button Content="Guardar" Command="{Binding SaveCommand}"/>
            <Button Content="Eliminar" Command="{Binding DeleteCommand}"/>
            <Button Content="Agregar materiales (picker)" Command="{Binding AddMaterialsCommand}"/>
        </StackPanel>

        <Grid ColumnDefinitions="2*,3*" ColumnSpacing="12" Margin="0,8,0,0">
            <DataGrid Grid.Column="0" ItemsSource="{Binding Subgroups}" SelectedItem="{Binding Selected}"
                AutoGenerateColumns="False" IsReadOnly="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <DataGrid Grid.Column="1" ItemsSource="{Binding Materials}" AutoGenerateColumns="False" IsReadOnly="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Material" Binding="{Binding MaterialName}" Width="*"/>
                    <DataGridTextColumn Header="USD" Binding="{Binding PriceUSD, StringFormat={}{0:N6}}" Width="120"/>
                    <DataGridTextColumn Header="Cantidad" Binding="{Binding Quantity, StringFormat={}{0:N2}}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </DockPanel>
</UserControl>
