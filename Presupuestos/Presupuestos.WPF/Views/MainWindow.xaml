<Window x:Class="Presupuestos.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Presupuestos" Height="720" Width="1200" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Barra lateral -->
        <StackPanel Orientation="Vertical" Width="220" Background="#EEF2F6" DockPanel.Dock="Left">
            <TextBlock Text="Presupuestos" Margin="16" FontSize="18" FontWeight="SemiBold"/>
            <Button Content="Wizard" Margin="8" Command="{Binding GoWizardCommand}"/>
            <Button Content="Materiales" Margin="8" Command="{Binding GoMaterialsCommand}"/>
            <Button Content="Mano de Obra" Margin="8" Command="{Binding GoLaborCommand}"/>
            <Button Content="Subgrupos" Margin="8" Command="{Binding GoSubgroupsCommand}"/>
            <Button Content="Configuración" Margin="8" Command="{Binding GoSettingsCommand}"/>
        </StackPanel>

        <ContentControl Content="{Binding CurrentViewModel}" Margin="8"/>
    </DockPanel>
</Window>

