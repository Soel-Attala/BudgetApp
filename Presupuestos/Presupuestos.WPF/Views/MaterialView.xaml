<UserControl x:Class="Presupuestos.WPF.Views.MaterialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel Margin="12">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Spacing="8">
            <TextBox Width="280" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Buscar" Command="{Binding SearchCommand}"/>
            <Button Content="Nuevo" Command="{Binding NewCommand}"/>
            <Button Content="Guardar" Command="{Binding SaveCommand}"/>
            <Button Content="Eliminar" Command="{Binding DeleteCommand}"/>
        </StackPanel>
        <DataGrid ItemsSource="{Binding Items}" SelectedItem="{Binding Selected}"
              AutoGenerateColumns="False" IsReadOnly="False" Margin="0,8,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="USD" Binding="{Binding PriceUSD, StringFormat={}{0:N6}}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
