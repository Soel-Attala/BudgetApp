<UserControl x:Class="Presupuestos.WPF.Views.LaborView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DockPanel Margin="12">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,8">
            <TextBox Width="220" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,8,0"/>
            <ComboBox Width="200" ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" DisplayMemberPath="Name" Margin="0,0,8,0"/>
            <Button Content="Buscar" Command="{Binding SearchCommand}" Margin="0,0,8,0"/>
            <Button Content="Nueva categoría" Command="{Binding NewCategoryCommand}" Margin="0,0,8,0"/>
            <Button Content="Nuevo ítem" Command="{Binding NewItemCommand}" Margin="0,0,8,0"/>
            <Button Content="Guardar" Command="{Binding SaveCommand}" Margin="0,0,8,0"/>
            <Button Content="Eliminar" Command="{Binding DeleteCommand}"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}"
              AutoGenerateColumns="False" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Unidad" Binding="{Binding Unit}" Width="120"/>
                <DataGridTextColumn Header="AR$/unit" Binding="{Binding PriceARS, StringFormat={}{0:N6}}" Width="120"/>
                <DataGridTextColumn Header="Categoría" Binding="{Binding Category.Name}" Width="180"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</UserControl>
